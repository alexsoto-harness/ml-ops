FROM public.ecr.aws/lambda/python:3.10

# Set the working directory to /app
WORKDIR /app

# Install build dependencies (gcc, make, etc.). Do not install system cmake (it's old).
RUN yum update -y && \
    yum install -y gcc gcc-c++ make libgomp wget tar gzip && \
    yum clean all

# Use pip to install a modern CMake (provides a recent cmake CLI) and ensure pip/tools are up-to-date.
RUN python3 -m pip install --upgrade pip setuptools wheel cmake

# Copy the current directory contents into the container at /app
COPY . /app

# Install Python requirements and build LightGBM
RUN pip install -r requirements.txt && \
    pip install lightgbm

# Optional: verify cmake version (helpful while debugging builds)
# RUN cmake --version